def indices_maxi (tab) : 
    max_val = max(tab)
    indice = []
    if len(tab) == 0 : 
        return False
    else : 
        for i in range(len(tab)) : 
            if tab[i] == max_val: 
                indice.append(i)
        return (max_val, indice)

tab = 1, 5, 6, 9, 1, 2, 3, 7, 9, 8
print(indices_maxi(tab))
